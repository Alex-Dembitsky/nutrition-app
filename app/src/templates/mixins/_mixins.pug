mixin createNav(className, navList)
    nav(class='c-nav-'+className)
        ul(class='c-nav-'+className+'__list')
            each i in navList
                li(class='c-nav-'+className+'__item')
                    a(class='c-nav-'+className+'__link' href=i.url)= i.name


